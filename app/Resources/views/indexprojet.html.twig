{% extends 'base.html.twig' %}

{% block body %}

    <div id="page-wrapper">
    <div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Projet</h4></div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <a href="{{ path("new-projet") }}">Nouveau Projet</a>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title">Ils travaillent avec nous</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <td>Nom du projet</td>
                            <td>Date de d√©but</td>
                            <td>Date butoire</td>
                            <td>Action</td>

                        </tr>
                        </thead>
                        {% for projet in projets %}
                            <tr>
                                <td>{{ projet.nameProjet }}</td>
                                <td>{{ projet.dateDebut|date('d/m/Y') }}</td>
                                <td>{{ projet.dateButoir|date('d/m/Y') }}</td>
                                <td>
                                    <a href={{ path('edit-projet', {id:projet.id}) }}>Modifier</a>
                                    <a href={{ path('delete-projet', {id:projet.id}) }}>Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>


{% endblock %}