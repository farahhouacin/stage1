{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title">Fiche client</h3>
            <div class="table-responsive">
                <table class="table ">
                    <thead>
                    <tr>
                        <th>NOM</th>
                        <th>Prénom</th>
                        <th>Numéro de téléhpone</th>
                        <th>Adresse e-mail</th>
                    </tr>
                    </thead>

                    <td>
                        {% for client in clients %}
                            <td>{{ client.nameClient }}</td>
                            <td>{{ client.firstnameClient }}</td>
                            <td>{{ client.telClient }}</td>
                            <td>{{ client.emailClient }}</td>
                        {% endfor %}
                    </td>

                </table>
                <a href="indexClient.html.twig">Accueil</a><br>

                <a href="{{ path('edit-client', {id:client.id}) }}"> Modifier</a><br><br>

                <a href="{{ path('delete-client', {id:client.id}) }}"> Supprimer</a><br><br>

                <a href="{{ path('index-client') }}">Retour</a>

                <a href="{{ path('new-client') }}">Ajouter un client</a><br>
            </div>
        </div>
    </div>
</div>


{% endblock %}