{% extends 'base.html.twig' %}

{% block body %}
<div id="page-wrapper">
    <div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Clients</h4> </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <a href="{{ path("new-client") }}">Nouveau Client</a>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title">Nos clients</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <td>Nom du client</td>
                            <td>Prénom du client</td>
                            <td>Téléphone client</td>
                            <td>Email client</td>
                            <td>Action</td>
                        </tr>
                        </thead>

                        {% for client in clients %}
                            <tr>
                            <td>{{ client.nameClient }}</td>
                            <td>{{ client.firstnameClient }}</td>
                            <td>{{ client.telClient }}</td>
                            <td>{{ client.emailClient }}</td>
                            <td>
                                <a href={{ path('edit-client', {id:client.id}) }}>Modifier</a>
                                <a href={{ path('delete-client', {id:client.id}) }}>Supprimer</a>
                                {#<a href="{{ path('details-client', {id:client.id}) }}"> Détails</a>#}
                            </td>
                            <tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>

        {#  #}



{% endblock %}
