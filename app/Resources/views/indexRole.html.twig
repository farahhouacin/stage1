{% extends 'base.html.twig' %}

{%  block body %}

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Role</h4> </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <ol class="breadcrumb">
                        <a href="{{ path("new-role") }}" class="farah">Nouveau</a>
                    </ol>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="white-box">
                        <h3 class="box-title"></h3>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <td>Titre</td>
                                    <td>Action</td>
                                </tr>
                                </thead>

                                {% for role in roles %}
                                <tr>
                                    <td>{{ role.nomRole }}</td>
                                    <td>
                                        <a href={{ path('edit-role', {id:role.id}) }}><i class="fa fa-edit" style="color:orange"></i></a>

                                        <button onclick="document.getElementById('{{role.id}}').style.display='block'"> <i class="fa fa-trash-alt" style="color:red"></i> </button>

                                        <div id="{{role.id}}" class="modal">
                                            <span onclick="document.getElementById('{{role.id}}').style.display='none'" class="close" title="Close Modal">&times;</span>
                                            <form class="modal-content">
                                                <div class="container">
                                                    <h1>Confirmation de la suppression</h1>
                                                    <p>Etes-vous s√ªr de vouloir supprimer ?</p>

                                                    <div>
                                                        <button type="button">    <a href="{{ path('index-role') }}"> Annuler  </a> </button>
                                                        <button type="button"> <a href={{ path('delete-role', {id:role.id}) }}> Oui, supprimer  </a> </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </td>
                                <tr>
                                    {% endfor %}

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}